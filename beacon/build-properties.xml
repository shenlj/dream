<?xml version="1.0" encoding="UTF-8"?>
<project>

	<!-- =================================================================== -->
	<!-- Webapp  Setting                                                     -->
	<!-- =================================================================== -->
	<!-- 该工程的名称 -->
	<property name="project.name" value="mrs" />
	<!-- 该工程的WebRoot目录 -->
	<property name="web.root" value="WebRoot" />
	
	<!-- 该工程的名称(发布用) -->
	<property name="web.name" value="mrs" />
	<!-- 该工程发布后的.war包名称 -->
	<property name="war.file" value="${web.name}.war" />
	<!-- 该工程发布后的.ear包名称 -->
	<property name="ear.file" value="${web.name}.ear" />
	<!-- 该工程发布后的版本 -->
	<property name="project.version" value="1.0.0" />

	<property name="jdk.home.dir" value="E:/java/jdk6" />
	<property name="war.dest" value="war" />

	<!-- Tomcat的根目录 -->
	<property name="tomcat.home.dir" value="E:/java/apache-tomcat-6.0.30" />
	<!-- Tomcat的发布目录 -->
	<property name="tomcat.dir" value="E:/java/apache-tomcat-6.0.30/webapps" />

	<!-- glassfish -->
	<property name="glassfish.home.dir" value="D:/JAVATOOLS/glassfishv3" />
	<property name="glassfish.dir" value="D:/JAVATOOLS/glassfishv3/glassfish/domains/domain1/applications" />
	<!-- jboss -->
	<property name="jboss.dir" value="D:/JAVATOOLS/jboss-4.2.2/server/default/deploy" />
	<!-- the JBoss server installation directory -->
	<property name="jboss.home.dir" value="D:/JAVATOOLS/jboss-4.2.2" />
	<!-- the JBoss server configuration name (the directory under JBOSS_HOME/server) -->
	<property name="deploy.configuration" value="default" />
	<!-- the JBoss server configuration directory -->
	<property name="deploy.configuration.dir" value="${jboss.home.dir}/server/${deploy.configuration}/conf" />

	<!-- Directory structure of the project -->
	<property name="src.dir" value="${basedir}/src" />

	<!-- 工程的java代码文件存放的文件夹 ########## -->
	<property name="src.main.java.dir" value="${basedir}/src/main" />
	<!-- 工程的配置文件存放的文件夹 ########## -->
	<property name="src.main.res.dir" value="${basedir}/src/resources" />

	<!-- 测试工程的java代码文件存放的文件夹 ########## -->
	<property name="src.test.java.dir" value="${basedir}/src/test/java" />
	<!-- 测试工程的配置文件存放的文件夹 ########## -->
	<property name="src.test.res.dir" value="${basedir}/src/test/resources" />

	<!-- 工程中使用到的Jeaw框架的Jar文件存放的路径 ########## -->
	<property name="dist.dir" value="${basedir}/dist" />
	<!-- 工程中使用到的各种库文件及Jar文件存放的路径 ########## -->
	<property name="lib.dir" value="${basedir}/lib" />
	<property name="doc.dir" value="${basedir}/doc" />
	<property name="report.dir" value="${basedir}/report" />
	<property name="gen.src.dir" value="${basedir}/gen-src" />
	<property name="schemas.dir" value="${basedir}/schemas" />
	<property name="db.dir" value="${basedir}/db" />
	<property name="templates.dir" value="${basedir}/metadata/templates" />
	<property name="profile.dir" value="${basedir}/metadata/profile" />
	<property name="dbunit.dir" value="${basedir}/metadata/dbunit" />
	<!-- 在工程发布后，工程编译后的类的存放路径 -->
	<property name="classes.dir" value="${web.root}/WEB-INF/classes" />
	<!-- 在工程发布后，工程中使用的Jar包的存放路径 -->
	<property name="classes.lib.dir" value="${basedir}/${web.root}/WEB-INF/lib" />

	<!-- checkstyle -->
	<property name="checkstyle.home.dir" value="${basedir}/report/checkstyle" />
	<property name="checkstyle.config" value="${profile.dir}/checkstyle-profile.xml"/>
	<property name="checkstyle.report.style" value="${lib.dir}/codereview/checkstyle/checkstyle-frames-errors.xsl"/>
	<property name="checkstyle.result" value="${checkstyle.home.dir}/checkstyle_result.xml"/>
	<property name="checkstyle.report" value="${checkstyle.home.dir}/checkstyle_report.html"/>

	<!-- pmd -->
	<property name="pmd.home.dir" value="${basedir}/report/pmd" />
	<property name="pmd.rule.dir" value="${lib.dir}/codereview/pmd/rulesets"/>

	<!-- findbugs -->
	<property name="findbugs.home" value="${lib.dir}/codereview/findbugs" />
	<property name="findbugs.file" value="${basedir}/report/findbugs/ost/bugs.xml" />
	<property name="findbugs.destdir" value="${basedir}/report/findbugs/ost" />
	<property name="findbugs.desthtmldir" value="${basedir}/report/findbugs/ost" />
	<property name="findbugs.destexceldir" value="${basedir}/report/findbugs/ost" />
	<property name="findbugs.src" value="${src.main.java.dir}" />
	<property name="findbugs.class" value="${web.root}/WEB-INF/classes" />

	<!-- emma -->
	<property name="emma.enabled" value="true" />
	<property name="instrument.dir" location="${basedir}/report/instrbin" />
	<property name="coverage.dir" location="${basedir}/report/coverage" />

	<!-- junit -->
	<property name="junit.home.dir" value="${basedir}/report/junit" />

	<!-- =================================================================== -->
	<!-- Classpaths                                                          -->
	<!-- =================================================================== -->
	<path id="userpath">
		<path location="${web.root}/WEB-INF/classes" />
	</path>

	<path id="classpath">
		<fileset dir="${classes.lib.dir}">
			<include name="*.jar" />
		</fileset>
		<path location="${web.root}/WEB-INF/classes" />
	</path>

	<path id="classpathfull">
		<fileset dir="${lib.dir}">
			<include name="**/*.jar" />
		</fileset>
		<path location="${web.root}/WEB-INF/classes" />
	</path>

	<path id="junit.classpath">
		<fileset dir="${lib.dir}/tdd/junit" includes="*.jar" />
	</path>

	<path id="checkstyle.classpath">
		<fileset dir="${lib.dir}/codereview/checkstyle" includes="*.jar" />
	</path>

	<path id="pmd.classpath">
		<fileset dir="${lib.dir}/codereview/pmd" includes="*.jar" />
	</path>

	<path id="findbugs.classpath">
		<fileset dir="${lib.dir}/codereview/findbugs" includes="*.jar" />
	</path>

	<path id="dbunit.classpath">
		<fileset dir="${lib.dir}/tdd/dbunit" includes="*.jar" />
	</path>

	<path id="emma.classpath">
		<fileset dir="${lib.dir}/tdd/emma" includes="*.jar" />
	</path>

	<path id="jaxb.classpath">
		<fileset dir="${lib.dir}/jaxb" includes="*.jar" />
	</path>

	<!-- =================================================================== -->
	<!-- taskdefs                                                          -->
	<!-- =================================================================== -->

	<!-- hibernate tool -->
	<taskdef name="hibernatetool" classname="org.hibernate.tool.ant.HibernateToolTask">
		<classpath refid="classpath" />
	</taskdef>

</project>