<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.mrs.sysmgr.entity.Resource"
		table="t_sys_resource">
		<id name="id" type="java.lang.String">
			<column name="ID" />
			<generator class="uuid.hex" />
			<!--
				<generator class="sequence">
				<param name="sequence">SYSTEM_SEQUENCE</param>
				</generator>
			-->
		</id>
		<property name="name" type="java.lang.String">
			<column name="NAME" length="32" not-null="true"
				unique="true" />
		</property>
		<property name="forMenu" type="java.lang.String">
			<column name="FORMENU" length="1" />
		</property>
		<property name="resString" type="java.lang.String">
			<column name="RESSTRING" not-null="true" unique="true" />
		</property>
		<property name="descn" type="java.lang.String">
			<column name="DESCN" length="80" />
		</property>
		<property name="resType" type="java.lang.String">
			<column name="RESTYPE" length="8" not-null="true" />
		</property>
		<property name="operateTime" type="java.util.Date">
            <column name="OperateTime" />
        </property>
        <property name="operatorCode" type="java.lang.String">
            <column name="operatorCode" length="32" />
        </property>
        <property name="operatorName" type="java.lang.String">
            <column name="operatorName" length="60" />
        </property>
         <property name="operateType" type="java.lang.String">
            <column name="OperateType" length="1" />
        </property>
		<set name="permissions" table="T_SYS_PERMIS_RESC" lazy="true">
			<key column="RESCID"></key>
			<many-to-many class="com.mrs.sysmgr.entity.Permission"
				column="PERMISID">
			</many-to-many>
		</set>
	</class>

</hibernate-mapping>

