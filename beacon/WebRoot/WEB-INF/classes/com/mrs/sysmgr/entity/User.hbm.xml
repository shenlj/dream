<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.mrs.sysmgr.entity.User" table="t_sys_user" >
		<id name="id" type="java.lang.String">
			<column name="ID" />
			<generator class="uuid.hex" />
		</id>
		<property name="loginid" type="java.lang.String">
			<column name="LOGINID" length="32" not-null="true"
				unique="true" />
		</property>
		<property name="passwd" type="java.lang.String">
			<column name="PASSWD" length="80" not-null="true" />
		</property>
		<property name="sex" type="java.lang.String">
			<column name="SEX" length="1"/>
		</property>
		<property name="username" type="java.lang.String">
			<column name="USERNAME" length="32" />
		</property>
		<property name="status" type="java.lang.String">
			<column name="STATUS" length="1" />
		</property>
		<property name="operateTime" type="java.util.Date">
            <column name="OperateTime" />
        </property>
        <property name="operatorCode" type="java.lang.String">
            <column name="operatorCode" length="32" />
        </property>
        <property name="operatorName" type="java.lang.String">
            <column name="operatorName" length="60" />
        </property>
         <property name="operateType" type="java.lang.String">
            <column name="OperateType" length="1" />
        </property>
    	<many-to-one name="organization" class="com.mrs.sysmgr.entity.Organization"
			fetch="join" not-found="ignore" not-null="false" cascade="none">
			<column name="ORGID" />
		</many-to-one>
		<set name="roles" table="T_SYS_USER_ROLE" lazy="true">
        	<key column="USERID"/>
        	<many-to-many column="ROLEID" class="com.mrs.sysmgr.entity.Role"/>
    	</set>
    	<set name="permissions" table="T_SYS_USER_PERMISSION" lazy="true">
        	<key column="USERID"/>
        	<many-to-many column="PERMISSIONID" class="com.mrs.sysmgr.entity.Permission"/>
    	</set>
	</class>
</hibernate-mapping>