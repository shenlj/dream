<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.mrs.sysmgr.entity.Permission" table="t_sys_permission">
		<id name="id" type="java.lang.String">
			<column name="ID" />
			<generator class="uuid.hex" />
		</id>
		<property name="name" type="java.lang.String">
			<column name="NAME" length="32" not-null="true" />
		</property>
		<property name="descn" type="java.lang.String">
			<column name="DESCN" length="80" />
		</property>
		<property name="url" type="java.lang.String">
			<column name="URl" length="500" />
		</property>
		<property name="status" type="java.lang.String">
			<column name="STATUS" length="1" />
		</property>
		<property name="operateTime" type="java.util.Date">
            <column name="OperateTime" />
        </property>
        <property name="operatorCode" type="java.lang.String">
            <column name="operatorCode" length="32" />
        </property>
        <property name="operatorName" type="java.lang.String">
            <column name="operatorName" length="60" />
        </property>
         <property name="operateType" type="java.lang.String">
            <column name="OperateType" length="1" />
        </property>
         <property name="permissionType" type="java.lang.String">
            <column name="PermissionType" length="1" />
        </property>
		<set name="roles" table="T_SYS_ROLE_PERMISSION" lazy="true">
			<key column="PERMISSIONID"></key>
			<many-to-many class="com.mrs.sysmgr.entity.Role" column="ROLEID" />
		</set>
		<set name="users" table="T_SYS_USER_PERMISSION" lazy="true">
			<key column="PERMISSIONID"></key>
			<many-to-many class="com.mrs.sysmgr.entity.User" column="USERID" />
		</set>
	</class>
</hibernate-mapping>

