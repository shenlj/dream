<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.mrs.sysmgr.entity.Task" table="t_sys_task" >
		<id name="id" type="java.lang.String">
			<column name="ID" />
			<generator class="uuid.hex" />
		</id>
		<property name="title" type="java.lang.String">
			<column name="TITLE" />
		</property>
		<property name="action" type="java.lang.String">
			<column name="ACTION" />
		</property>
		<property name="taskType" type="java.lang.String">
			<column name="TASKTYPE" />
		</property>
		<property name="userId" type="java.lang.String">
			<column name="USERID" />
		</property>
		<property name="param" type="java.lang.String">
			<column name="PARAM"/>
		</property>
		<property name="dataId" type="java.lang.String">
			<column name="DATAID"/>
		</property>
		<property name="remind" type="java.lang.String">
			<column name="REMIND"/>
		</property>
		<property name="status" type="java.lang.String">
			<column name="STATUS" />
		</property>
		<property name="operateTime" type="java.util.Date">
            <column name="OperateTime" />
        </property>
        <property name="operatorCode" type="java.lang.String">
            <column name="operatorCode" length="32" />
        </property>
        <property name="operatorName" type="java.lang.String">
            <column name="operatorName" length="60" />
        </property>
        <property name="operateType" type="java.lang.String">
            <column name="OperateType" length="1" />
        </property>
        <property name="createTime" type="java.util.Date">
            <column name="createTime" />
        </property>
        <property name="creater" type="java.lang.String">
            <column name="creater" length="32" />
        </property>
        <property name="createName" type="java.lang.String">
            <column name="createName" length="60" />
        </property>
	</class>
</hibernate-mapping>

