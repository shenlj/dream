<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.mrs.sysmgr.entity.LoginAudit" table="t_sys_audit_login"
		dynamic-update="true" dynamic-insert="true">
		<cache usage="nonstrict-read-write" />
		<id name="id" type="java.lang.String">
			<column name="ID" />
			<generator class="uuid.hex" /> 
		</id>
		<property name="loginId" type="java.lang.String">
			<column name="LOGINID" />
		</property>
		<property name="sessionID" type="java.lang.String">
			<column name="SESSIONID" />
		</property>
		<property name="userIpAddr" type="java.lang.String">
			<column name="USERIPADDR" />
		</property>
		<property name="appsysName" type="java.lang.String">
			<column name="APPSYSNAME" />
		</property>
		<property name="deployCode" type="java.lang.String">
			<column name="DEPLOYCODE" />
		</property>
		<property name="loginTime" type="java.util.Date">
			<column name="LOGINTIME" />
		</property>
		<property name="logoutTime" type="java.util.Date">
			<column name="LOGOUTTIME" />
		</property>
	</class>
</hibernate-mapping>